	echo "------------------------------------------------------------------------------------------------"
	echo "START: $PWD/$0:"
	echo "------------------------------------------------------------------------------------------------"
	echo "--------------------------------------------------------------------------------------------"
	echo "Version-Historie:"
	echo "--------------------------------------------------------------------------------------------"
	echo "V-Nr.     Datum            Zeit        Inhalt"
	echo "--------------------------------------------------------------------------------------------"
	echo "1.0       xx.xx.2006       00:00       32-bit Solution"
	echo "--------------------------------------------------------------------------------------------"
	echo "------------------------------------------------------------------------------------------------"
	echo "ENDE: $PWD/$0:"
	echo "------------------------------------------------------------------------------------------------"
	exit 0;
fi
